<Page class="background" navigatingTo="onNavigatingTo" 
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <GridLayout id="ab" columns="* auto *">
            <Image col="0" src="~/images/x.png" tap="cancel" className="deleteIcon" horizontalAlignment="left"/>
            <StackLayout col="1">
                <Label class="action-bar-title" text="Create Task" verticalAlignment="center" horizontalAlignment="center" textWrap="true"></Label>
            </StackLayout>
            <!-- <Image col="2" src="~/images/check.png" tap="create" className="deleteIcon" horizontalAlignment="right"/> -->
        </GridLayout>
    </ActionBar>

    <ScrollView>
        <StackLayout id="main">

        </StackLayout>
    </ScrollView>
</Page> 